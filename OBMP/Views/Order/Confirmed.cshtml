@using OBMP.Models


@{
    ViewBag.Title = "Orders";
}


<ul id="myTab" class="nav nav-tabs">
    
    <li><a href="~/Order/All">All Orders</a></li>
    <li><a href="~/Order/Accepted">Accepted</a></li>
    <li  class="active"><a href="~/Order/Confirmed">Confirmed</a></li>
    <li><a href="~/Order/Pending">Pending</a></li>
    <li><a href="~/Order/Rejected">Rejected</a></li>
</ul>


@(Html.Kendo().Grid<OrderViewModel>().Name("Order").Columns(c => {
    c.Bound(o => o.Id);
    c.Bound(o => o.CustomerId);
    c.Bound(o => o.CustomerName);
    c.Bound(o => o.OrderDate).Format("{0:d}"); 
    c.Bound(o => o.RequiredDate).Format("{0:d}"); 
    c.Bound(o => o.Status);
    })
    .DataSource(d => d
        .Ajax()
        .Read(r => r.Action("GetAllOrders", "Order"))
        .PageSize(10)
    )
    .Pageable()
    .Groupable()
    .Sortable()
    .Filterable()
)
