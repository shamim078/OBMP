@using OBMP.Models


@{
    ViewBag.Title = "Orders";
}


<ul id="myTab" class="nav nav-tabs">
    
    <li><a href="~/Order/All">All Orders</a></li>
    <li class="active"><a href="~/Order/Accepted">Accepted</a></li>
    <li><a href="~/Order/Confirmed">Confirmed</a></li>
    <li><a href="~/Order/Pending">Pending</a></li>
    <li><a href="~/Order/Rejected">Rejected</a></li>
</ul>

@(Html.Kendo().Grid<Product>().Name("Products").Columns(c => {
    c.Bound(p => p.Name);
    c.Bound(p => p.Supplier.Name).Title("Partner");
    c.Bound(p => p.Category.Name).Title("Category");
    c.Bound(p => p.UnitPrice).Format("{0:c}");
    c.Bound(p => p.UnitsInStock);
    c.Bound(p => p.Discontinued);
    })
    .DataSource(d => d
        .Ajax()
        .Read(r => r.Action("GetProducts", "Customer"))
        .PageSize(10)
    )
    .Pageable()
    .Groupable()
    .Sortable()
    .Filterable()
)
