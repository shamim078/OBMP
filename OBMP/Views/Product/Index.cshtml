@using OBMP.Models

@{
    ViewBag.Title = "Products";
}


<script type="text/x-kendo-tmpl" id="template">
    <div class="product">
        <img src="@Url.Content("~/Images/Products/")#:Id#.jpg" alt="#:Name# image" />
        <h2>#:Name#</h2>
        <p> Price: #:kendo.toString(UnitPrice, "c")#
                
            <a class="btn btn-primary" href="##"> Order </a>        

        </p>
    </div>
</script>

<div class="demo-section">
@(Html.Kendo().ListView<Product>()
    .Name("listView")
    .TagName("div")
    .ClientTemplateId("template")
    .DataSource(dataSource => {
        dataSource.Read(read => read.Action("Products_Read", "Product"));
        dataSource.PageSize(12);
    })
    .Pageable()
)
</div>

